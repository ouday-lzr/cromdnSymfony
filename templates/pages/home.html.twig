{% extends 'base.html.twig' %}

{% block title 'Tous les medecins' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 total">
                <h3>
                    Liste des Médecins Dentistes <span class="badge badge-light">ok</span>
                </h3>
            </div>
        </div>

        <div class="row table-responsive-md justify-content-center">
        <table id="table_id" class="display table table-hover table-striped col-md-12 ">
            <thead class="thead-dark">
                 <tr>
                     <th scope="col">N°Inscription</th>
                     <th scope="col">Nom</th>
                     <th scope="col">Prénom</th>
                     <th scope="col">Profil</th>
                     <th scope="col">Actions</th>
                 </tr>
            </thead>
            <tbody>
            {%  for medecin in medecins %}
                <tr>
                    <td>{{ medecin.id }}</td>
                    <td>{{ medecin.nom }}</td>
                    <td>{{ medecin.prenom }}</td>
                    <td ><a href="#">
                        <i class="fas fa-user-circle  fa-2x"></i>
                    </a>
                    </td>
                    <td><a href="{{ path('medecins.edit', {id: medecin.id})}}" ><i class="fas fa-edit btn btn-primary" ></i></a>

                        <a  href="#"  onclick="return confirm('voulez-vous vraiment supprimer ce medecin ')">
                            <i class="fas fa-trash-alt btn btn-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    </div>

{% endblock %}